{
  "name": "shuffle-to-ride",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "increment-build": "node scripts/increment-build.js",
    "build:android": "npm run increment-build && npx eas-cli build --platform android --profile preview",
    "build:ios": "npm run increment-build && npx eas-cli build --platform ios --profile production"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.2",
    "expo": "~54.0.31",
    "expo-linear-gradient": "~15.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "^29.0.16",
    "partysocket": "^1.1.10",
    "react": "19.1.0",
    "react-native": "0.81.5"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "babel-preset-expo": "~13.2.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
